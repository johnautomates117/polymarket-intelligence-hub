# API Configuration
# Set to 'mock' for testing with simulated data, 'real' for production APIs
REACT_APP_MODE=mock

# Real API Keys (only needed when REACT_APP_MODE=real)
# OpenAI API for AI Assistant
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# News API for real-time news
REACT_APP_NEWS_API_KEY=your_news_api_key_here

# Polymarket API for real market data
REACT_APP_POLYMARKET_API_KEY=your_polymarket_api_key_here

# Optional: Custom API endpoints
REACT_APP_POLYMARKET_API_URL=https://clob.polymarket.com
REACT_APP_NEWS_API_URL=https://newsapi.org/v2
REACT_APP_OPENAI_API_URL=https://api.openai.com/v1

# Feature Flags
REACT_APP_ENABLE_REAL_TRADING=false
REACT_APP_ENABLE_SOCIAL_FEATURES=true
REACT_APP_ENABLE_CUSTOM_MARKETS=true
